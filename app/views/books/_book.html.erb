<div class="card text-secondary bg-dark book-card">

  <%= image_tag(book.cover, alt: "book cover", class: "card-img-top book-cover") if book.cover.attached? %>

  <div class="card-body book-body">
      <h5><%= link_to book.title, book, class: 'card-title book-title' %></h5>
    <div>
      <p class="card-text book-author"><%= book.author %></p>
      <div class="book-card-links">
        <%= rent_button(book) %>
      </div>
    </div>
  </div>
</div>
