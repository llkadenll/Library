<h1>Library</h1>

<%= render "dropdown" %>

<% if admin_signed_in? %>
  <%= link_to "New book", new_book_path %>
<% end %>

<% if @books.empty? %>
  <p>No books found.</p>
<% end %>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
  <% end %>
</div>

<%= raw pagy_bootstrap_nav(@pagy) %>
